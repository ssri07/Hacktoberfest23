public class MangoTree {
    private int age; // Age of the mango tree
    private int height; // Height of the mango tree in meters

    public MangoTree(int age, int height) {
        this.age = age;
        this.height = height;
    }

    public void grow(int years) {
        age += years;
        height += years; // Simple growth simulation
        System.out.println("The mango tree is now " + age + " years old and " + height + " meters tall.");
    }

    public void bearFruit() {
        if (age >= 5) {
            System.out.println("The mango tree is bearing fruit.");
        } else {
            System.out.println("The mango tree is too young to bear fruit.");
        }
    }

    public static void main(String[] args) {
        MangoTree mangoTree = new MangoTree(3, 2);

        System.out.println("Mango Tree Information:");
        System.out.println("Age: " + mangoTree.age + " years");
        System.out.println("Height: " + mangoTree.height + " meters");

        mangoTree.grow(2);
        mangoTree.bearFruit();
    }
}
