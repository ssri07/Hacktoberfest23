public class BinarySearch {
    private int[] sortedArray;

    public BinarySearch(int[] sortedArray) {
        this.sortedArray = sortedArray;
    }

    public int search(int target) {
        int left = 0;
        int right = sortedArray.length - 1;

        while (left <= right) {
            int mid = left + (right - left) / 2;

            if (sortedArray[mid] == target) {
                return mid; // Element found, return its index
            }

            if (sortedArray[mid] < target) {
                left = mid + 1; // Target is in the right half
            } else {
                right = mid - 1; // Target is in the left half
            }
        }

        return -1; // Element not found
    }

    public static void main(String[] args) {
        int[] sortedArray = {2, 4, 6, 8, 10, 12, 14, 16, 18};
        BinarySearch binarySearch = new BinarySearch(sortedArray);
        
        int target = 10; // Change this to the element you want to search for
        int result = binarySearch.search(target);
        
        if (result != -1) {
            System.out.println("Element " + target + " found at index " + result);
        } else {
            System.out.println("Element " + target + " not found in the array.");
        }
    }
}
